{
  "root": true,
  "overrides": [
    {
      "files": ["*.ts"],
      "extends": ["standard-with-typescript", "plugin:playwright/recommended", "prettier"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
          "jsx": true
        }
      },
      "plugins": ["prettier", "import"],
      "rules": {
        "prettier/prettier": 2,
        "no-console": "warn"
      }
    }
  ]
}
